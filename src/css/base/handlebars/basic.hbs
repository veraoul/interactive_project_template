{{#sprites}}
{{#ifIndexOfBTN name}}
.{{name}} {
  background-position: {{px.offset_x}} {{px.offset_y}};
  width: {{px.width}};
  height: {{half height}}; }
  html.desktop .{{name}}:hover {
      background-position:{{px.offset_x}} {{hoverPosition offset_y height}};  }
{{else}}
.{{name}} {
  background-position: {{px.offset_x}} {{px.offset_y}};
  width: {{px.width}};
  height: {{px.height}}; }
{{/ifIndexOfBTN }}
{{/sprites}}