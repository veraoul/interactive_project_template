@require 'variables'
m()
  +lessThan(sm - 1)
    {block}

p()
  +lessThan(md - 1)
    {block}

l()
  +lessThan(lg - 1)
    {block}

d()
  +moreThan(lg)
    {block}

lessThan(value)
  @media (max-width: unit(value, px))
    {block}

moreThan(value)
  @media (min-width: unit(value, px))
    {block}

mediaBetween(lower, upper)
  @media (min-width: unit(lower, px)) and (max-width: unit(upper, px))
    {block}