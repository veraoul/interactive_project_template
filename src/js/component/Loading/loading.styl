@import '~css/markvann.styl'

@keyframes loading-roll-left
  from
    transform rotate(0deg)
  to
    transform rotate(-360deg)

@keyframes loading-roll-right
  from
    transform rotate(0deg)
  to
    transform rotate(360deg)

.loading-root
  width 100%
  height 100%
  background rgba(#000, 0.9)
  position fixed
  left 0
  top 0
  z-index 1000
  .roll-small
    width 60px
    height 60px
    border 10px transparent solid
    border-radius 50%
    position absolute
    left 50%
    top 50%
    margin -40px 0 0 -40px
    +mobile()
      width 30px
      height 30px
      border-width 5px
      margin -20px 0 0 -20px
  .roll-large
    width 80px
    height 80px
    border 10px transparent solid
    border-radius 50%
    position absolute
    left 50%
    top 50%
    margin -50px 0 0 -50px
    +mobile()
      width 50px
      height 50px
      border-width 5px
      margin -30px 0 0 -30px
  .roll-left
    border-top-color darkcyan
    border-bottom-color darkcyan
    animation loading-roll-left 2.5s linear 0s infinite
  .roll-right
    border-left-color darkcyan
    border-right-color darkcyan
    animation loading-roll-right 2s linear 0s infinite